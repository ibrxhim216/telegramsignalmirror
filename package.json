{
  "name": "telegram-signal-copier",
  "version": "1.0.0",
  "description": "Desktop application that copies trading signals from Telegram to MT4/MT5/cTrader",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5555 && cross-env NODE_ENV=development electron .",
    "build": "tsc && vite build && electron-builder",
    "build:win": "npm run build -- --win",
    "build:mac": "npm run build -- --mac",
    "build:linux": "npm run build -- --linux",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "trading",
    "forex",
    "mt4",
    "mt5",
    "signal-copier"
  ],
  "author": "Telegram Signal Mirror Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibrxhim216/telegramsignalmirror"
  },
  "bugs": {
    "url": "https://github.com/ibrxhim216/telegramsignalmirror/issues"
  },
  "homepage": "https://github.com/ibrxhim216/telegramsignalmirror#readme",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "clsx": "^2.1.0",
    "compromise": "^14.10.0",
    "date-fns": "^3.3.1",
    "express": "^4.18.2",
    "lucide-react": "^0.344.0",
    "natural": "^6.10.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "sql.js": "^1.10.3",
    "telegram": "^2.22.2",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.20",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/sql.js": "^1.4.9",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.0.1",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-electron": "^0.28.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.telegramsignalcopier.app",
    "productName": "Telegram Signal Copier",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
